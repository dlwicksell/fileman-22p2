  <ext4:formPanel id="recordSelectForm" border="false">
    <ext4:fieldSet id="recordLookup" title="<?= #menuSelected ?>" margin="10 10 0 10">
      <ext4:displayfield fieldLabel="Input to what file" labelWidth="140" value="<?= #fileSelect ?>" />

      <ext4:comboBox fieldLabel="Select (one or more)" labelWidth="140" name="recordList" multiSelect="true" />
    </ext4:fieldSet>

    <ext4:submitbutton text="Choose New File" margin="0 10 0 0 " nextPage="fmEnterEditForm" addTo="westPanel" replacePreviousPage="true" />

    <ext4:submitbutton text="Select" margin="0 10 0 0" nextPage="fmEntryForm" addTo="centerPanel" replacePreviousPage="true" />
  </ext4:formPanel>
</ext4:fragment>
