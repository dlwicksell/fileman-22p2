  <ext4:viewPort id="viewPort" style="background-color: #cbddf3;">
    <ext4:layout type="vbox" align="center" pack="center" />

    <ext4:panel region="center" border="true" bodyPadding="0 0 5px 0">
      <ext4:formPanel id="loginForm" title="Please Log in" border="false" bodyPadding="10px 0 0 0">
     
        <ext4:fieldSet id="introFieldSet" style="background: url(/dev/images/login.png) left no-repeat; border: none;">
          <ext4:displayfield id="introMessage" width="360" fieldStyle="border: none; font-family: arial; text-align: right; font-size: 12px; padding: 10px;" value="*" />
        </ext4:fieldSet>
       
        <ext4:fieldSet id="loginFieldSet" border="false">
          <ext4:textfield id="accessCode" inputType="password" fieldLabel="Access Code" value="" allowBlank="false" width="350" />
          <ext4:textfield id="verifyCode" inputType="password" fieldLabel="Verify Code" value="" allowBlank="false" width="350" />
        </ext4:fieldSet>
      
        <ext4:submitbutton text="Login" nextPage="loginRedirect" />
      </ext4:formPanel>
    </ext4:panel>
  </ext4:viewPort>

</ext4:container>
